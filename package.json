{
  "name": "@elizaos/plugin-email-automation",
  "version": "0.25.6-alpha.1",
  "description": "AI-powered email automation plugin for Eliza",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --format esm --dts",
    "clean": "rimraf dist",
    "dev": "tsup --format esm --dts --watch",
    "lint": "biome lint .",
    "lint:fix": "biome check --apply .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "resend": "^2.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.test.(ts|js)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:client:1.0.0",
    "pluginParameters": {
      "RESEND_API_KEY": {
        "type": "string",
        "description": "Your Resend API key"
      },
      "DEFAULT_TO_EMAIL": {
        "type": "string",
        "description": "Default recipient email address"
      },
      "DEFAULT_FROM_EMAIL": {
        "type": "string",
        "description": "Default sender email address"
      },
      "EMAIL_AUTOMATION_ENABLED": {
        "type": "boolean",
        "default": true,
        "description": "Enable AI detection. If this is enabled, the plugin will automatically detect email-worthy conversations and handle generation/delivery"
      },
      "EMAIL_EVALUATION_PROMPT": {
        "type": "string",
        "optional": true,
        "description": "Custom detection criteria for shouldEmail"
      }
    }
  }
}